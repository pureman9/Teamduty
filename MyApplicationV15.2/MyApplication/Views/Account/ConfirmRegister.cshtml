<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Login</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.css" rel="stylesheet">

    <!-- Add custom CSS here -->
    <link href="~/Content/Logincss.css" rel="stylesheet">
    <link href="font-awesome/css/font-awesome.min.css" rel="stylesheet">
</head>


    @model MyApplication.Member

    @{
        ViewBag.Title = "ConfirmRegister";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    @using (Html.BeginForm())
    {


        <div class='login'>

            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <h2>ConfirmRegister</h2>
            <br>
            @Html.HiddenFor(model => model.UserId, new { @Value = @ViewData["OK"] })
            <br>

            @Html.TextBoxFor(model => model.ConfirmRegisterCode, new { @class = "form-control", placeholder = "Input Your Register Code" })
            @Html.ValidationMessageFor(model => model.ConfirmRegisterCode)
            <br>

            <br>
            <br>



            <input type="submit" class="animated" value="ConfirmRegister">

            <br>

            <div>
                <br><br>
                @Html.ActionLink("Back to Home", "Index", "Home")
            </div>


        </div>
    }

 