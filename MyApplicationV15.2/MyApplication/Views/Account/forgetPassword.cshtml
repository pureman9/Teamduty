<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Forget Password</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.css" rel="stylesheet">

    <!-- Add custom CSS here -->
    <link href="~/Content/Logincss.css" rel="stylesheet">
    <link href="font-awesome/css/font-awesome.min.css" rel="stylesheet">
</head>

    @model MyApplication.Member

    @{
        ViewBag.Title = "forgetPassword";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    @using (Html.BeginForm())
    {


        <div class='login'>

            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <h2>ForgetPassword</h2>
            <br>

            <br>

            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Your Username" })
            @Html.ValidationMessageFor(model => model.Email)
            <br>
            @Html.PasswordFor(model => model.RegisterCode, new { @class = "form-control", placeholder = "Your register code" })
            @Html.ValidationMessageFor(model => model.RegisterCode)
            <br>
            <br>



            <input type="submit" class="animated" value="Send Password to Email">

            <br>

            <div>
                <br><br>
                @Html.ActionLink("Back to Home", "Index", "Home")
            </div>


        </div>
    }



